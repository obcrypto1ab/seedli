rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Is the user the specific admin?
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'info@seedlicapital.com';
    }

    // Public Settings & Content (Read Only for Public)
    match /settings/public {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /faq/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /announcements/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /sources/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admin Only Sections
    match /settings/admins {
      allow read, write: if isAdmin();
    }
    match /settings/features {
      allow read, write: if isAdmin(); // Backend reads this with Admin SDK
    }
    match /settings/security {
      allow read, write: if isAdmin();
    }
    match /logs/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
